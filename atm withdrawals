REG: CT101/G/26428/25
DESCRIPTION: allow withdrawals from an account until balance is zero
*/
#include <stdio.h>

int main() {
    float balance, withdraw;

    printf("Enter initial account balance: ");
    scanf("%f", &balance);

    while (balance > 0) {
        printf("\nEnter amount to withdraw: ");
        scanf("%f", &withdraw);

        balance -= withdraw;
        printf("Remaining balance: %.2f\n", balance);

        if (balance <= 0) {
            printf("Insufficient funds! Account balance is zero or negative.\n");
        }
    }

    return 0;
}